{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types-ext"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/types-ext/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
